config samba
	option 'name'			'OpenWrt'
	option 'workgroup'		'WORKGROUP'
	option 'description'		'OpenWrt'
	option 'homes'			'1'

config sambashare
	option 'name' 'tmp'
	option 'path' '/tmp'
	option 'workgroup' 'WORKGROUP'
	option 'description' 'openwrt'
	option 'homes' '1'
	option 'read_only' 'no'
	option 'guest_ok' 'yes'
	option 'create_mask' '0755'
	option 'dir_mask' '0755'
	option 'users' 'root'
